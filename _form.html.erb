<%= form_for @car, html: { class: 'form-horizontal' } do |f|%>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being added:</h2>
      <ul>
      <% @car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field form-group">
    <%= f.label :regnumber, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :regnumber, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :model, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :model, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :capacity, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :capacity, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :start_mileage, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :start_mileage, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :status, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :status, Car.statuses.keys,class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :curr_rate, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :curr_rate, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :pickup_address, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :pickup_address, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <div class="col-sm-offset-2 col-sm-2">
      <%= f.submit class: 'form-control btn btn-primary' %>
    </div>
  </div>
<% end %>
